{% extends 'template.twig' %}

{% block content %}
    {% if usuario is not defined %}
        {% set usuario = null %}
    {% endif %}
    <div class="page-header">
        <h3>
            {% if usuario is not null %} 
                Alteração
                {% set action='usuario/update/' ~ usuario.codigo %}
            {% else %}
                Cadastro
                {% set action='usuario/cadastrar' %}
            {% endif %} 
            de Usuários
        </h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form class="form-horizontal" method="POST" action="{{app.url_base}}{{action}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-8">
                        <input type="text" name="nome" {% if usuario %} value="{{ usuario.nome}}" {% endif %} class="form-control" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Área:</label>
                    <div class="col-sm-8">
                        <input type="text" name="area" {% if usuario %} value="{{ usuario.area }}" {% endif %} class="form-control" placeholder="Área">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Pontos:</label>
                    <div class="col-sm-8">
                        <input type="text" name="pontos" {% if usuario %} value="{{ usuario.pontos }}" {% endif %} class="form-control" placeholder="Pontos">
                    </div>
                </div>
                <div {% if usuario %} class="sr-only" {% endif %}>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Senha:</label>
                        <div class="col-sm-8">
                            <input type="password" name="senha" {% if usuario %} value="{{ usuario.pontos }}" {% endif %} class="form-control" placeholder="Senha">
                        </div>
                    </div>
                </div>
                <div {% if usuario %} class="sr-only" {% endif %}>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Confirmar Senha:</label>
                        <div class="col-sm-8">
                            <input type="password"  {% if usuario %} value="{{ usuario.pontos }}" {% endif %} class="form-control" placeholder="Senha">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="isadmin" {% if usuario  and usuario.isadmin%} checked="true" {% endif %}> Administrador
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-default">
                            {% if usuario is not null %}
                                Alterar
                            {% else %}
                                Cadastrar
                            {% endif %}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
