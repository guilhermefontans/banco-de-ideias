{% extends 'template.twig' %}

{% block content %}
<div class="page-header">
    <h3>Usuários</h3>
</div>

<p>
    <a class="btn btn-info" href="{{app.url_base}}usuario/add">
        NOVO USUÁRIO
    </a>
</p>
<div class="panel panel-primary">
      <!-- Default panel contents -->
        <div class="panel-heading">Lista de Usuários Cadastrados</div>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Área</th>
            <th>Pontos</th>
            <th>Ações</th>
        </tr>
            {% for usuario in usuarios %}
            <tr>
                <td>{{usuario.codigo}}</td>
                <td>{{usuario.nome}}</td>
                <td>{{usuario.area}}</td>
                <td>{{usuario.pontos}}</td>
                <td>
                    <a href="{{app.url_base}}usuario/alterar/{{usuario.codigo}}">
                        <div class="btn btn-default">Alterar</div>
                    </a>
                    <a href="{{app.url_base}}usuario/delete/{{usuario.codigo}}">
                        <div class="btn btn-danger">Excluir</div>
                    </a>
                </td>
            </tr>
            {% endfor %}
    </table>
</div>
<p>
    <a class="btn btn-info" href="{{app.url_base}}relatorio">
        Relatório em PDF
    </a>
</p>
{% endblock %}
