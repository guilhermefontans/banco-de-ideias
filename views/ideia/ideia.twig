{% extends 'template.twig' %}

{% block content %}
<div class="page-header">
    <h3>Ideias</h3>
</div>

<p>
    <a class="btn btn-primary" href="{{app.url_auth}}ideia/add">
        NOVA IDEIA
    </a>
</p>
<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Lista de Ideias Cadastrados</div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Área</th>
                <th>Usuário</th>
                <th>Status</th>
                <th>Data</th>
            </tr>
                {% for ideia in ideias %}
                <tr>
                    <td>{{ideia.codigo}}</td>
                    <td>{{ideia.nome}}</td>
                    <td>{{ideia.descricao}}</td>
                    <td>{{ideia.area}}</td>
                    <td>{{ideia.usuario}}</td>
                    <td>{{ideia.status}}</td>
                    <td>{{ideia.data}}</td>
                    <td>
                        <a href="{{app.url_auth}}ideia/alterar/{{ideia.codigo}}">
                            <div class="btn btn-default">Alterar</div>
                        </a>
                        <a href="{{app.url_auth}}ideia/delete/{{ideia.codigo}}">
                            <div class="btn btn-danger">Excluir</div>
                        </a>
                    </td>
                </tr>
                {% endfor %}
        </table>
    </div>
    <p>
        <a class="btn btn-primary" href="{{app.url_auth}}relatorio">
            Relatório em PDF
        </a>
    </p>
</div>
{% endblock %}
