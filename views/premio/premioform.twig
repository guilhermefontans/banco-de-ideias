{% extends 'template.twig' %}

{% block content %}
    {% if premio is not defined %}
        {% set premio = null %}
    {% endif %}
    <div class="page-header">
        <h3>
            {% if premio is not null %} 
                Alteração
                {% set action='premio/update/' ~ premio.codigo %}
            {% else %}
                Cadastro
                {% set action='premio/cadastrar' %}
            {% endif %} 
            de Prêmio
        </h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form class="form-horizontal" method="POST" action="{{app.url_base}}{{action}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-8">
                        <input type="text" name="nome" {% if premio %} value="{{ premio.nome}}" {% endif %} class="form-control" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Pontos:</label>
                    <div class="col-sm-8">
                        <input type="text" name="pontos" {% if premio %} value="{{ premio.pontos }}" {% endif %} class="form-control" placeholder="Pontos">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-default">
                            {% if premio is not null %}
                                Alterar
                            {% else %}
                                Cadastrar
                            {% endif %}
                        </button>
                        <button type="submit" class="btn btn-default" action="{{app.url_base}}premio">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
