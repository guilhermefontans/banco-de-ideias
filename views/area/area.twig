{% extends 'template.twig' %}

{% block content %}
<div class="page-header">
    <h3>Áreas</h3>
</div>

<p>
    <a class="btn btn-primary" href="{{app.url_base}}area/add">
        NOVA ÁREA
    </a>
</p>

<table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Ações</th>
    </tr>
        {% for area in areas %}
        <tr>
            <td>{{area.codigo}}</td>
            <td>{{area.nome}}</td>
            <td>{{area.descricao}}</td>
            <td>
                <a href="{{app.url_base}}area/alterar/{{area.codigo}}">
                    <div class="btn btn-default">Alterar</div>
                </a>
                <a href="{{app.url_base}}area/delete/{{area.codigo}}">
                    <div class="btn btn-danger">Excluir</div>
                </a>
            </td>
        </tr>
        {% endfor %}
</table>
<p>
    <a class="btn btn-primary" href="{{app.url_base}}relatorio">
        Relatório em PDF
    </a>
</p>
{% endblock %}
