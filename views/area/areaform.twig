{% extends 'template.twig' %}

{% block content %}
    {% if area is not defined %}
        {% set area = null %}
    {% endif %}
    <div class="page-header">
        <h3>
            {% if area is not null %} 
                Alteração
                {% set action='area/update/' ~ area.codigo %}
            {% else %}
                Cadastro
                {% set action='area/cadastrar' %}
            {% endif %} 
            de Área
        </h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form class="form-horizontal" method="POST" action="{{app.url_base}}{{action}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-8">
                        <input type="text" name="nome" {% if area %} value="{{ area.nome}}" {% endif %} class="form-control" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">descricao:</label>
                    <div class="col-sm-8">
                        <input type="text" name="descricao" {% if area %} value="{{ area.descricao }}" {% endif %} class="form-control" placeholder="Descrição">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-default">
                            {% if area is not null %}
                                Alterar
                            {% else %}
                                Cadastrar
                            {% endif %}
                        </button>
                        <button type="submit" class="btn btn-default" action="{{app.url_base}}area">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
