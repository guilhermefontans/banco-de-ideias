{% extends 'template.twig' %}

{% block content %}
    {% if premio is not defined %}
        {% set premio = null %}
    {% endif %}
    <div class="page-header">
        <h3>
            {% if premio is not null %}
                Alteração
                {% set action='premio/update/' ~ premio.codigo %}
            {% else %}
                Cadastro
                {% set action='premio/cadastrar' %}
            {% endif %}
            de Prêmio
        </h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            {% if app.my_session.has('error') %}
                <div class="alert alert-danger">
                    {{app.my_session.flash('error')}}
                </div>
            {% endif %}
            <form id="premio-form" class="form-horizontal" method="POST" action="{{app.url_auth}}{{action}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-8">
                        <input type="text" required maxlength="40" name="nome" {% if premio %} value="{{ premio.nome}}" {% endif %} class="form-control" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Pontos:</label>
                    <div class="col-sm-8">
                        <input type="number" required maxlength="11" name="pontos" {% if premio %} value="{{ premio.pontos }}" {% endif %} class="form-control" placeholder="Pontos">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-primary">
                            {% if premio is not null %}
                                Alterar
                            {% else %}
                                Cadastrar
                            {% endif %}
                            <span class="glyphicon glyphicon-floppy-save"></span>
                        </button>
                        <a type="submit" class="btn btn-primary" href="{{app.url_auth}}premio">Cancelar
                            <span class="glyphicon glyphicon-arrow-left"></span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
